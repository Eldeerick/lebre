<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:orientation="vertical"
    android:padding="35dp"
    tools:context=".MainScreen">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/HintText"/>

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textColor="@color/TextColor"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/TextColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        android:textColor="@color/TextColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/TextColor"
        android:text="Estado"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/HintText"/>

    <TextView
        android:id="@+id/ajuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precisa de ajuda?"
        android:textColor="@color/TextColor"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Emergencia_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_button_emergencia"
        android:onClick="click"
        android:text="@string/emergencia"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/HintText"/>

    <TextView
        android:id="@+id/ocorrencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OcorrÃªncias Cadastradas"
        android:textColor="@color/TextColor"
        android:layout_gravity="center"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/HintText"/>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:theme="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>